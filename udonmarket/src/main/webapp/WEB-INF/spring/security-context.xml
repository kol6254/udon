						<user name="admin" password="$2a$10$.VCSov4CIdjFuEC9b1sr6exI/oweXSOFsSJyvyYYsZSLcnDkYQi9W" authorities="ROLE_USER, ROLE_ADMIN"/>
					</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>
